
        <div id="breadcrumbs">
          <ol>
            <li><a href="/ash/oah/oah-initiatives/index.html">OAH Initiatives</a></li>
            <li class="current"><a href="/ash/oah/oah-initiatives/tpp/index.html"><%= data.site.title %></a></li>
          </ol>
        </div>

        <div class="hgroup">
          <h1 class="tk-proxima-nova"><%= data.site.title %></h1>
        </div>

        <div class="entry-content">

        <!-- 
        BELOW is dojo4-provided content; ABOVE is Trilogy template content
        -->

        <%= javascript_include_tag 'jquery.scrollTo-1.4.2-min.js', 'application', 'jquery.ba-hashchange.min' %>

        <div id="chapters" class="tabs">

          <ul class="chapter-nav ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all">
            <% data.chapters.each_with_index do |chapter, chapter_index| %>
              <% rows = chapter_index.to_s %>
              <li>
                <a href="#chapter-<%= rows %>"><%= chapter.title %></a>
              </li>
            <% end %>
          </ul>

          <% data.chapters.each_with_index do |chapter, chapter_index| %>
            <% 
              previous_navs = [nil, nil, nil]
              next_navs = [nil, nil, nil]
            %>
            <% 
              # update previous_navs unless current is first
              unless chapter_index == 0
                previous_navs[0] = "#chapter-#{(chapter_index - 1).to_s}/"
              end

              # update next_navs unless current is last
              unless chapter == data.chapters.last
                next_navs[0] = "#chapter-#{(chapter_index + 1).to_s}/"
              end
            %>
            <% rows = chapter_index.to_s %>

            <div id="chapter-<%= rows %>" class="tab">

              <h2 class="tk-proxima-nova chapter-title">
                <span class="dojofore"><%= chapter.icon %></span><strong><%= chapter.title %></strong><% if chapter.subtitle %>: <%= chapter.subtitle %><% end %>
              </h2>
          
              <div id="sections" class="tabs">

                <ul class="section-nav clearfix">
                <% chapter.sections.each_with_index do |section, section_index| %>
                  <% section_index = section_index + 1 %>
                  <% rows = chapter_index.to_s + '-' + section_index.to_s %>
                  <li><a href="#section-<%= rows %>"><%= section.title %></a></li>
                <% end %>
                </ul>

                <% chapter.sections.each_with_index do |section, section_index| %>
                  <% 
                    # update previous_navs unless current is first
                    unless section_index == 0
                      previous_navs[1] = "#chapter-#{(chapter_index)}/section-#{(chapter_index).to_s}-#{section_index.to_s}/"
                    else
                      previous_navs[1] = nil
                    end

                    # update next_navs unless current is last
                    unless section == chapter.sections.last
                      next_navs[1] = "#chapter-#{(chapter_index)}/section-#{(chapter_index).to_s}-#{(section_index + 2).to_s}/"
                    else
                      next_navs[1] = nil
                    end
                  %>
                  <% section_index = section_index + 1 %>
                  <% rows = chapter_index.to_s + '-' + section_index.to_s %>

                  <div id="section-<%= rows %>" class="tab ui-tabs-panel">
                    <div class="pad">
                      <div class="row-fluid">

                      <% if section.subsections %> 
                        <div id="subsections" class="tabs">

                          <ul>
                          <% section.subsections.each_with_index do |subsection, subsection_index| %>
                            <% subsection_index = subsection_index + 1 %>
                            <% rows = chapter_index.to_s + '-' + section_index.to_s + '-' + subsection_index.to_s %>
                            <li><a href="#subsection-<%= rows %>"><%= subsection.title %></a></li>
                          <% end %>
                          </ul>

                          <% section.subsections.each_with_index do |subsection, subsection_index| %>
                            <% 
                              # update previous_navs unless current is first
                              unless subsection_index == 0
                                previous_navs[2] = "#chapter-#{(chapter_index)}/section-#{(chapter_index).to_s}-#{(section_index).to_s}/subsection-#{(chapter_index)}-#{(section_index)}-#{subsection_index}/"
                              else
                                previous_navs[2] = nil
                              end

                              # update next_navs unless current is last
                              unless subsection == section.subsections.last
                                next_navs[2] = "#chapter-#{(chapter_index)}/section-#{(chapter_index).to_s}-#{(section_index).to_s}/subsection-#{(chapter_index)}-#{(section_index)}-#{(subsection_index + 2)}/"
                              else
                                next_navs[2] = nil
                              end
                           %>
                            <% subsection_index = subsection_index + 1 %>
                            <% rows = chapter_index.to_s + '-' + section_index.to_s + '-' + subsection_index.to_s %>


                            <div id="subsection-<%= rows %>" class="tab ui-tabs-panel">

                            <%= partial(:rows, :locals => { :rows => rows }) %>

                            <ul class="row-fluid next_prev">
                              <% previous_nav = previous_navs.compact.last %>
                              <% unless previous_nav == nil %>
                                <li class="prev-link pull-left">
                                  <a href="<%= previous_nav %>" class="btn">
                                    &laquo; previous
                                  </a>
                                </li>
                              <% end %>
                              <% next_nav = next_navs.compact.last %>
                              <% unless next_nav == nil %>
                                <li class="next-link pull-right">
                                  <a href="<%= next_nav %>" class="btn">
                                    next &raquo;
                                  </a>
                                </li>
                              <% end %>
                            </ul>

                            </div><!-- eo #subsection<%= subsection_index %> -->
                          <% end %>

                        </div><!-- eo #subsections -->
                      <% else %>
                          <%= partial(:rows, :locals => { :rows => rows }) %>
                          <ul class="row-fluid next_prev">
                            <% previous_nav = previous_navs.compact.last %>
                            <% unless previous_nav == nil %>
                              <li class="prev-link pull-left">
                                <a href="<%= previous_nav %>" class="btn">
                                  &laquo; previous
                                </a>
                              </li>
                            <% end %>
                            <% next_nav = next_navs.compact.last %>
                            <% unless next_nav == nil %>
                              <li class="next-link pull-right">
                                <a href="<%= next_nav %>" class="btn">
                                  next &raquo;
                                </a>
                              </li>
                            <% end %>
                          </ul>
                      <% end %>

                      </div><!-- eo .row-fluid -->
                    </div><!-- eo .pad -->
                  </div><!-- eo #section<%= section_index %> -->

                <% end %>

              </div><!-- eo #sections -->
            </div><!-- eo #chapter<%= chapter_index %> -->
          <% end %>
        </div><!-- eo #chapters -->

        <!-- 
        ABOVE is dojo4-provided content; BELOW is Trilogy template content
        -->

        </div><!-- eo .entry-content -->
